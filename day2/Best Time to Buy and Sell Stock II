class Solution {
public:
    int maxProfit(vector<int>& arr) {
        int profit = 0;
        int ans = 0;
        int buy = arr[0];
        
        for(int i = 1; i < arr.size(); i++)
        {
            if(arr[i] < arr[i-1])
            {
                ans = ans + profit;
                buy = arr[i];
            }
            int val = arr[i] - buy;
            profit = max(0, val);
        }
        ans = ans + profit;
        return ans;
        
    }
};
