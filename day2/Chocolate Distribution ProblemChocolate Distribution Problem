class Solution{
    public:
    long long findMinDiff(vector<long long> a, long long n, long long m){
    //code
        sort(a.begin(), a.end());
        int i = 0, j = m-1;
        long long ans = INT_MAX;
        
        while(j < n)
        {
            long long val = a[j] - a[i];
            ans = min(ans,val);
            i++, j++;
        }
        
        return ans;
        
    }   
};
